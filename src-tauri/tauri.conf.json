      "identifier": "io.github.nICEnnnnnnnLee.master-lee",
      "shortDescription": "简短的介绍",
      "longDescription": "长一点的介绍",
      "resources": [
        "resources/*"
      ],
      "targets": "all",
      "deb": {
        "depends": []
      },
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "wix": {
          "language": "zh-CN"
        }
      }
    },
    "security": {
